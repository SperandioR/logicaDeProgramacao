Algoritmo "Ex_condicional_notas_01"


Var

   nota1, nota2, notaFinal: real

Inicio
  //entrada dos dados.
   escreva("Digite a primeira nota:")
   leia(nota1)

   escreva("Digite a segunda nota:")
   leia(nota2)
   
    notaFinal <- nota1 + nota2
    
    escreval("Nota final =", notaFinal:5:2)
    
   // Criando a estrutura condicional
   
   se notaFinal < 60 entÃ£o
      escreval("REPROTAVADO!")
   fimse
   
    

