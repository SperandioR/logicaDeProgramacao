Algoritmo "Ex_menor_de_trez"



Var

   a, b, c, menor : inteiro

Inicio
   escreva("Primeiro valor:")
   leia(a)

   escreva("Segundo valor:")
   leia(b)

   escreva("Terceiro valor:")
   leia(c)

   //Estrutura condicional
   se (a < b) e (a < c) ent達o
      menor <- a
   sen達o
      se b < c ent達o
         menor <- b
      sen達o
         menor <- c

      fimse
   fimse
   
    escreval("menor =", menor)


Fimalgoritmo
